@model IQueryable<DemoWithSQL.Models.SearchTest>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "SQL_SearchDemo_Create") &nbsp;&nbsp;&nbsp;&nbsp;Count:&nbsp;&nbsp;&nbsp; @ViewBag.count
</p>
<br />
@using (Html.BeginForm())
{
    <div>
        <input  id="search" name="search"/> Search <br />
        <input type="submit" value="search req" />
    </div>
}
<table class="table">
    <tr>
        <th>
            ID
        </th>
        <th>
            DefaultKey
        </th>
        <th>
            Name
        </th>
        <th>
            Description
        </th>
        <th>
            RequestMsg
        </th>
        <th>
            ResponseMsg
        </th>
        <th>
            CreateDate
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DefaultKey)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RequestMsg)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ResponseMsg)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreateDate)
            </td>
            <td>
                @Html.ActionLink("Details", "SQL_SearchDemo_Details", new { id = item.ID })
            </td>
        </tr>
    }

</table>
